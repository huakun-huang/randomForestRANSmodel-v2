FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sets;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
surfaces
{
    surfaceFormat raw;
    type  surfaces;
    writeControl writeTime;
    fields ( pMean );
    interpolationScheme cellPoint;
    surfaces
    (
        wall
	    {
	        type  patch; 
		    patches ("cylinder");
	    }
    );
}