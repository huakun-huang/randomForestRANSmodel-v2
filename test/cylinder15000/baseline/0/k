FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "flow.H"
dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $k;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $k;
    }
    outlet
    {
        type            zeroGradient;
    }
    down
    {
        type            symmetry;
    }
    up
    {
        type             symmetry;
    }
    defaultFaces
    {
        type            symmetry;
    }
    cylinder
    {
        type            fixedValue;
        value           uniform 1e-8;
    }
}


